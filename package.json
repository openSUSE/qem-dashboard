{
  "name": "qem-dashboard",
  "main": "assets/main.js",
  "type": "module",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:clean": "npm run clean && npm run build",
    "watch": "vite build --watch",
    "clean": "rm -fr public/asset/*",
    "lint": "npm run lint:js && npm run lint:md",
    "lint:js": "eslint \"assets/*.js\" \"assets/**/*.js\" \"assets/**/*.vue\" \"t/*.js\" --ignore-pattern assets/webpack.config.d",
    "lint:md": "prettier --check \"**/*.md\"",
    "lint:commit": "commitlint",
    "lint:fix": "npm run tidy:js && npm run tidy:md",
    "tidy:js": "npm run lint:js -- --fix",
    "tidy:md": "prettier --write \"**/*.md\"",
    "test:unit": "vitest run",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix",
    "*.{pl,pm,t}": "perltidy -b -bext='/'",
    "*.md": "prettier --write"
  },
  "engines": {
    "node": ">= 18"
  },
  "overrides": {
    "minimatch": "^10.2.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.2.0",
    "@mojojs/path": "^1.7.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "bootstrap": "^5.3.8",
    "date-fns": "^4.1.0",
    "pinia": "^3.0.4",
    "vite": "^7.3.1",
    "vue": "^3.5.28",
    "vue-router": "^5.0.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@mojojs/core": "^1.26.12",
    "@mojolicious/server-starter": "^2.2.0",
    "@types/node": "^25.2.3",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-vue": "^10.7.0",
    "eslint-plugin-vuejs-accessibility": "^2.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "tap": "^21.5.1",
    "vitest": "^4.0.18"
  }
}
